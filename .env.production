# DumDoors Production Environment Configuration

# Devvit Configuration
DEVVIT_SUBREDDIT=r/dumdoors

# Database Configuration
MONGO_ROOT_USERNAME=dumdoors_admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
MONGO_DATABASE=dumdoors_prod
MONGO_PORT=27017

NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_HEAP_INITIAL=1G
NEO4J_HEAP_MAX=2G
NEO4J_PAGECACHE=1G

REDIS_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
REDIS_PORT=6379
REDIS_MAX_MEMORY=512mb

# Service Configuration
BACKEND_PORT=8080
AI_SERVICE_PORT=8000
BACKEND_REPLICAS=2
AI_SERVICE_REPLICAS=2

# Build Configuration
BUILD_TARGET=production
GIN_MODE=release

# Security
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS

# AI Service Configuration
OPENAI_API_KEY=your-production-openai-api-key
ANTHROPIC_API_KEY=your-production-anthropic-api-key
AI_MODEL_PROVIDER=openai

# Production Settings
NODE_ENV=production
LOG_LEVEL=info

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Proxy Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=dumdoors-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3